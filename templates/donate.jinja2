{% extends 'base.jinja2' %}

{% block subtitle %}Add Donation{% endblock subtitle %}

{% block content %}
    <h3>Donation Information: <span id="donation">Please fill out form</span></h3>
    <form method="POST">
        <table>
            <tr>
                <td>
                    <label for="fullname">Donor Name: </label>
                </td>
                <td>
                    <input class="form_input" type="string" id="fullname" name="fullname">
                </td>
            </tr>
            <tr>
                <td>
                    <label for="amount">Donation Amount: </label>
                </td>
                <td>
                    <input class="form_input" type="number" id="amount" name="amount">
                </td>
            </tr>
            <tr>
                <td>
                </td>
                <td>
                    <input class="command" type="submit" name="donate" value="Donate">
                </td>
            </tr>
        </table>
    </form>

    <form method="POST" action="{{ url_for('save') }}">
        <input type="submit" name="donate" value="Save It">
    </form>
{% endblock content %}
